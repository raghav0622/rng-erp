{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "hide-files.files": [
    ".next",
    "node_modules",
    "tsconfig.tsbuildinfo",
    ".storybook",
    ".vscode",
    "public"
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".gitignore": true,
    ".next": true,
    "node_modules": true,
    "tsconfig.tsbuildinfo": true,
    ".storybook": true,
    ".vscode": true
  }
}

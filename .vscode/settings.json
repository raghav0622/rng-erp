{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "hide-files.files": [
    "node_modules",
    "next-env.d.ts",
    "package-lock.json",
    "postcss.config.cjs",
    "tsconfig.tsbuildinfo",
    "vitest.config.ts",
    ".next/dev",
    ".github",
    ".next",
    ".env.local"
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".gitignore": true,
    "node_modules": true,
    "next-env.d.ts": true,
    "package-lock.json": true,
    "postcss.config.cjs": true,
    "tsconfig.tsbuildinfo": true,
    "vitest.config.ts": true,
    ".next/dev": true,
    ".github": true,
    ".next": true,
    ".env.local": true
  }
}
